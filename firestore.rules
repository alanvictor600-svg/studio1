rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUserId(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'admin';
    }

    // CORREÇÃO APLICADA AQUI:
    // Separa a permissão de leitura para que um usuário sempre possa ler seu próprio perfil.
    // Isso é crucial para a função getUserData() (e, por consequência, isAdmin()) funcionar.
    // As permissões de escrita (update, delete) continuam protegidas pela lógica original.
    match /users/{userId} {
      allow read: if isUserId(userId);
      allow update, delete: if isUserId(userId) || isAdmin();
      allow create: if request.auth.uid == userId;
    }
    
    // Configs: global config is readable by auth users, writable by admin.
    // publicRanking is also readable by auth users.
    match /configs/{docId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }

    // Draws: Readable by any authenticated user, writable only by admin.
    match /draws/{drawId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }
    
    // Tickets can be created by authenticated users.
    // Read/update/delete is restricted to the buyer, seller, or an admin.
    match /tickets/{ticketId} {
      allow create: if isAuth();
      allow read, update, delete: if isAuth() && 
                                (isUserId(resource.data.buyerId) || 
                                 isUserId(resource.data.sellerId) ||
                                 isAdmin());
    }

    // History: Only readable by the user it belongs to, or an admin.
    match /sellerHistory/{historyId} {
        allow read: if isAuth() && (isUserId(resource.data.sellerId) || isAdmin());
        allow create, update, delete: if isAdmin();
    }

    match /adminHistory/{historyId} {
        allow read, create, update, delete: if isAdmin();
    }
  }
}
