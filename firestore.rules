
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection rules
    match /users/{userId} {
      // Anyone can create a user document (for registration)
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can read their own data.
      // An admin can read any user's data.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // A user can update their own data. Admins can also update any user data (e.g., saldo).
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // Only admins can delete users.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Tickets collection rules
    match /tickets/{ticketId} {
      // Any authenticated user can create a ticket (clients or sellers).
      allow create: if request.auth != null;

      // An admin can read any ticket.
      // A user can read a ticket if they are the buyer or the seller.
      allow read: if request.auth != null && 
                  (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                   resource.data.buyerId == request.auth.uid || 
                   resource.data.sellerId == request.auth.uid);
                   
      // Only admins can update ticket status (e.g., expiring tickets).
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Only admins can delete tickets.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Draws collection rules
    match /draws/{drawId} {
      // Any authenticated user can read draws.
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete draws.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Configs collection rules
    match /configs/{configId} {
       // Any authenticated user can read configs (like ticket price).
      allow read: if request.auth != null;

      // Only admins can change configs.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Seller history rules
    match /sellerHistory/{historyId} {
      // An admin can read any seller history.
      // A seller can read their own history.
      allow read: if request.auth != null && 
                  (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
                   resource.data.sellerId == request.auth.uid);
                   
      // Only admins can create history entries (done in a batch write).
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // History should be immutable.
      allow update, delete: if false;
    }

    // Admin history rules
    match /adminHistory/{historyId} {
      // Only admins can read or write admin history.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
