/**
 * @fileoverview Firestore Security Rules for the Bol√£o Potiguar app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has exclusive access to their profile data and associated tickets.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - Each user's lottery tickets are stored in `/users/{userId}/tickets/{ticketId}`.
 *
 * Key Security Decisions:
 * - Users can only read and write their own data, enforced through path-based matching and the `isOwner()` function.
 * - Listing of tickets is restricted to the owner of the tickets.
 * - Users are identified using their Firebase Auth UID, which must match the `userId` in the Firestore paths.
 *
 * Denormalization for Authorization:
 *  - The `userId` field in the Ticket entity is used to enforce ownership and avoid `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' with matching userId creates their profile.
     * @allow (get) User 'user_abc' reads their profile.
     * @allow (update) User 'user_abc' updates their profile.
     * @allow (delete) User 'user_abc' deletes their profile.
     * @deny (create) User 'user_xyz' attempts to create a profile for user 'user_abc'.
     * @deny (get) User 'user_xyz' attempts to read user 'user_abc's profile.
     * @deny (update) User 'user_xyz' attempts to update user 'user_abc's profile.
     * @deny (delete) User 'user_xyz' attempts to delete user 'user_abc's profile.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to ticket documents under a user's profile.
     * @path /users/{userId}/tickets/{ticketId}
     * @allow (create) User 'user_abc' creates a ticket under their profile.
     * @allow (get) User 'user_abc' reads a ticket under their profile.
     * @allow (list) User 'user_abc' lists tickets under their profile.
     * @allow (update) User 'user_abc' updates a ticket under their profile.
     * @allow (delete) User 'user_abc' deletes a ticket under their profile.
     * @deny (create) User 'user_xyz' attempts to create a ticket under user 'user_abc's profile.
     * @deny (get) User 'user_xyz' attempts to read a ticket under user 'user_abc's profile.
     * @deny (list) User 'user_xyz' attempts to list tickets under user 'user_abc's profile.
     * @deny (update) User 'user_xyz' attempts to update a ticket under user 'user_abc's profile.
     * @deny (delete) User 'user_xyz' attempts to delete a ticket under user 'user_abc's profile.
     * @principle Enforces document ownership for writes and reads within a user's data tree.
     */
    match /users/{userId}/tickets/{ticketId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}