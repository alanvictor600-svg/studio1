
/**
 * @fileoverview Firestore Security Rules for the Bol√£o Potiguar app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, with special privileges for administrators.
 * Each user has exclusive access to their profile data.
 * Admins can manage users, draws, and view system-wide data.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - Each user's lottery tickets are stored in `/users/{userId}/tickets/{ticketId}`.
 * - Draws are stored in `/draws/{drawId}`.
 * - Historical data for sellers and admin summaries are stored in their respective collections.
 *
 * Key Security Decisions:
 * - Users can only read and write their own data, unless they are an admin.
 * - Admins can list and update any user profile.
 * - Ticket access is restricted to the buyer or seller, and admins.
 * - Draws can be read by any signed-in user, but only written/deleted by admins.
 * - History collections are protected, accessible only by the relevant user or an admin.
 * - The root `tickets` collection is queryable by buyer/seller ID or by an admin.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is an admin.
    // It reads the 'role' field from the user's own profile document.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isOwner() {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && (isOwner() || isAdmin());
      allow list: if isSignedIn() && isAdmin(); // Allow admins to list users.
      // Allow creation if the user ID in the path matches the authenticated user's ID.
      // This resolves the race condition during sign-up.
      allow create: if request.auth.uid == userId && request.resource.data.id == userId;
      // Allow update if the user is the owner OR the user is an admin.
      allow update: if isSignedIn() && (isOwner() || isAdmin());
      allow delete: if isSignedIn() && (isOwner() || isAdmin());
    }

    /**
     * @description Controls access to ticket documents under a user's profile.
     * @path /users/{userId}/tickets/{ticketId} - Note: This path is deprecated in favor of the root /tickets collection.
     * Keeping for legacy or specific use cases.
     */
    match /users/{userId}/tickets/{ticketId} {
      function isOwner() {
        return request.auth.uid == userId;
      }
      
      allow get, list: if isSignedIn() && (isOwner() || isAdmin());
      allow create: if isSignedIn() && isOwner() && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner() && resource.data.userId == userId && resource != null;
      allow delete: if isSignedIn() && isOwner() && resource != null;
    }

    /**
     * @description Controls access to the draws collection.
     * @path /draws/{drawId}
     */
    match /draws/{drawId} {
      // Any signed-in user can read the list of draws.
      allow get, list: if isSignedIn();
      // Only an admin can create, update, or delete draws.
      allow write: if isSignedIn() && isAdmin();
    }

    /**
     * @description Controls access to the configs collection.
     * @path /configs/{configId}
     */
    match /configs/{configId} {
        // Any signed-in user can read configurations.
        allow get: if isSignedIn();
        // Only admins can change configurations.
        allow write: if isSignedIn() && isAdmin();
    }
    
    /**
     * @description Controls access to the sellerHistory collection.
     * @path /sellerHistory/{historyId}
     */
    match /sellerHistory/{historyId} {
        // Allow a user to read their own history, or allow an admin to read any history.
        allow read: if isSignedIn() && (
            (request.auth.uid == resource.data.sellerId) || isAdmin()
        );
        // Allow list queries scoped by sellerId for the user, or unrestricted for admins.
        allow list: if isSignedIn() && (
            (request.query.limit <= 10 && request.query.offset == null || request.query.offset > 0) &&
            (request.query.where[0][1] == 'sellerId' && request.query.where[0][2] == request.auth.uid) || 
            isAdmin()
        );
        // Client-side writes are not allowed. These are created by the system when a lottery cycle ends.
        allow write: if false;
    }
    
    /**
     * @description Controls access to the adminHistory collection.
     * @path /adminHistory/{historyId}
     */
    match /adminHistory/{historyId} {
        // Only admins can read the admin history.
        allow read: if isSignedIn() && isAdmin();
        // Client-side writes are not allowed.
        allow write: if false;
    }

    /**
     * @description Controls access to the root `tickets` collection.
     * @principle This allows queries scoped by `buyerId` or `sellerId` for regular users,
     * and allows admins to perform any read operation. The `list` rule is simplified
     * because the client-side code *must* provide a `where` clause for the query to
     * succeed, as per Firestore's "rules are not filters" principle.
     */
    match /tickets/{ticketId} {
       allow get: if isSignedIn() && (
          request.auth.uid == resource.data.buyerId ||
          request.auth.uid == resource.data.sellerId ||
          isAdmin()
       );
       // Allow list if the user is signed in. The security is enforced by the
       // client-side code which MUST query by buyerId or sellerId. The `get` rule
       // above prevents any unauthorized document reads within that list.
       // Admins can list all tickets without restriction.
       allow list: if isSignedIn();
       
       // Allow creation if the user is the designated buyer or seller.
       allow create: if isSignedIn() && (
         request.resource.data.buyerId == request.auth.uid || 
         request.resource.data.sellerId == request.auth.uid
       );
       // Only allow updates for status changes by admin or transactional processes.
       allow update: if isSignedIn() && isAdmin();
       allow delete: if false; // Deleting tickets is not a desired functionality.
    }
  }
}
