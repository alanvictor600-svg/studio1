rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUserId(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'admin';
    }

    // A user can read their own profile, or an admin can read any profile.
    // This is crucial for the isAdmin() function to work correctly.
    match /users/{userId} {
      allow read: if isUserId(userId) || isAdmin();
      allow update: if isUserId(userId) || isAdmin(); // Admin can update user (e.g., add credits)
      allow delete: if isAdmin(); // Only admin can delete users
      allow create: if request.auth.uid == userId; // User can create their own document on signup
    }
    
    // Configs: global config is readable by auth users, writable by admin.
    // publicRanking is also readable by auth users.
    match /configs/{docId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }

    // Draws: Readable by any authenticated user, writable only by admin.
    match /draws/{drawId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }
    
    // Tickets:
    // - Create: Only an authenticated user can create a ticket.
    //   - If it's a client ticket, the buyerId must be their own UID.
    //   - If it's a seller ticket, the sellerId must be their own UID.
    // - Read/Update/Delete: Restricted to the buyer, seller, or an admin.
    match /tickets/{ticketId} {
      allow create: if isAuth() && 
                      ( (request.resource.data.buyerId == request.auth.uid && !('sellerId' in request.resource.data)) ||
                        (request.resource.data.sellerId == request.auth.uid && 'buyerName' in request.resource.data) );
      allow read, update, delete: if isAuth() && 
                                ( ('buyerId' in resource.data && isUserId(resource.data.buyerId)) || 
                                 ('sellerId' in resource.data && isUserId(resource.data.sellerId)) ||
                                 isAdmin() );
    }

    // History: Only readable by the user it belongs to, or an admin.
    match /sellerHistory/{historyId} {
        allow read: if isAuth() && (isUserId(resource.data.sellerId) || isAdmin());
        allow create, update, delete: if isAdmin();
    }

    match /adminHistory/{historyId} {
        allow read, create, update, delete: if isAdmin();
    }
  }
}
